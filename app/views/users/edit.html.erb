<% @user.errors.full_messages.each do |msg| %>
  <div><%= msg %></div>
<% end %>

<%= form_for @user do |f| %>
    <table>
      <tr><th><%= f.label :image %></th><td><%= f.file_field :picture %></td></tr>
      <tr><th><%= f.label :name %></th><td><%= f.text_field :name %></td></tr>
      <tr><th><%= f.label :email %></th><td><%= f.email_field :email %></td></tr>
    </table>
<%= f.submit %>
<% end %>
<%= link_to '戻る', :back %>
