
<ul>
  <% @comments.each do |comment| %>
    <% if comment.id.present? %>
        <li><%= comment.content %></li>
        <li><%= t('user.name') %><%= User.find(comment.user_id).name %></li>
        <li><%= link_to t('view.delete'), recipe_comment_path(comment.recipe.id, comment.id), method: :delete, remote: true %></li>
    <% end %>
  <% end %>
</ul>
